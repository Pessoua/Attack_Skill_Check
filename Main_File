    } else if (R14 == 4){
        printf("Df. 4\n");
        max_number = 100000;
        min_number = 10000;
        seconds = 3;
        rng_register();
    } else if (R14 == 0) {
        printf("Tutorial\n");
        tutorial();
    }
    else {
