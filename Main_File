int main(){
    
    printf("Dificulty? [0 to 4] ->");
    scanf("%d", &R14);
    if(R14 == 1){
        printf("Df. 1\n");
        max_number = 100;
        min_number = 10;
        seconds = 10;
        rng_register();
    } else if (R14 == 2){
        printf("Df. 2\n");
        max_number = 1000;
        min_number = 10;
        seconds = 7;
        rng_register();
    } else if (R14 == 3){
        printf("Df. 3\n");
